{
  "extends": "fastify-tsconfig",
  "compilerOptions": {
    "target": "es2016", 
    "experimentalDecorators": true, 
    "module": "commonjs", 
    "baseUrl": "./", 
    "typeRoots": [
      "./node_modules/@types",
      "typings"
    ],
    "sourceMap": true,
    "outDir": "./dist", 
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true 
  },
  "exclude": [
    "node_modules",
    "test"
  ],
  "include": ["src/**/*.ts"],
  "ts-node": {
    "transpileOnly": true
  }
}